<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/appAnimation</item>
    </style>

    <style name="StartTheme" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/ic_start</item>
    </style>

    <style name="appAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_out</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/edit_underline</item>
        <item name="colorControlActivated">#D7AB6C</item>
    </style>

    <style name="my_tab_text">
        <item name="android:textColor">#222222</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:textSize">@dimen/my_tab_size</item>
    </style>

    <style name="setting_tab_text">
        <item name="android:textColor">#222222</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/my_tab_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="setting_rl">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="setting_img">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="setting_line">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#f2f2f2</item>
    </style>

</resources>
