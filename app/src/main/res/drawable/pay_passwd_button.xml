<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--按钮样式-->

    <!-- 实心 -->
    <solid android:color="#D7AB6C" />
    <!-- 渐变 -->
    <gradient
        android:angle="270"
        android:endColor="#D7AB6C"
        android:startColor="#EFC992"
        android:type="linear" />
    <corners android:radius="20dp" />

    <!--间隔-->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

</shape>