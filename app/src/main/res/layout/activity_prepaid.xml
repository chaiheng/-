<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#EDEEEF"
    android:layout_height="match_parent"
    tools:context=".money.PrepaidActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="18sp"
            android:text="充值保证金"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <View
        android:background="#EBEBEB"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



                <LinearLayout
                    android:background="@color/white"
                    android:gravity="center_horizontal"

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="80dp"
                        android:text="倒计时："
                        android:textColor="@color/color_333"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/cv_count_down"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:isHideTimeBackground="true"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:timeTextColor="#FA5E59"
                        app:timeTextSize="16sp"
                        app:suffix=":"
                        />
                    <Chronometer
                        android:visibility="gone"
                        android:format="00:00"
                        android:id="@+id/tv_count_down"

                        android:text="17:00:20"
                        android:textSize="16sp"
                        android:textColor="#FA5E59"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">



                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_marginStart="50dp"
                        android:background="@drawable/gray_dot"
                        android:layout_width="6dp"
                        android:layout_height="6dp"/>
                    <View
                        android:layout_gravity="center_vertical"
                        android:background="#EBEBEB"
                        android:layout_width="124dp"
                        android:layout_height="2dp"/>
                    <View
                        android:layout_marginStart="3dp"
                        android:background="@drawable/black_dot"
                        android:layout_width="6dp"
                        android:layout_height="6dp"/>
                    <View
                        android:layout_marginStart="3dp"
                        android:layout_gravity="center_vertical"
                        android:background="#EBEBEB"
                        android:layout_width="124dp"
                        android:layout_height="2dp"/>
                    <View
                        android:layout_marginStart="3dp"
                        android:background="@drawable/gray_dot"
                        android:layout_width="6dp"
                        android:layout_height="6dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginStart="22dp"
                        android:textColor="#888888"
                        android:text="选择充值份额"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/color_333"
                        android:text="发起充值"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="#9B9B9B"
                        android:text="确认充值"
                        android:layout_marginEnd="27dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <TextView
                        android:textColor="#9B9B9B"
                        android:textSize="16sp"
                        android:text="充值金额"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginEnd="20dp"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/tv_figure"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:textColor="#FA5E59"
                        android:text="9000.02 BTA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="16dp"
                    android:background="#F7F7FA"
                    android:layout_width="match_parent"
                    android:layout_height="73dp">
                    <TextView
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="center_vertical"
                        android:text="请再次确认充值金额，以及充值地址，如未在规定时间
内完成充值，或者充值金额不足，将自动取消此次订单
                        "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_qr_code"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>
                <TextView
                    android:id="@+id/tv_save"
                    android:gravity="center"
                    android:background="@color/color_333"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="保存到相册"
                    android:layout_marginTop="14dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="120dp"
                    android:layout_height="43dp"/>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/color_333"
                        android:text="地址："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_prepaid_address"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@+id/tv_address"
                        android:text="11111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/bt_copy_address"
                        android:textSize="12sp"
                        android:background="@drawable/copy_bg"
                        android:text="复制地址"
                        android:textColor="@color/white"
                        android:layout_marginEnd="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="66dp"
                        android:layout_height="25dp"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView

                android:layout_marginTop="20dp"
                android:textColor="#9B9B9B"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_cancel_order"
                android:text="取消订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/bt_paid"
                android:textSize="16sp"
                android:text="已支付"
                android:textColor="@color/white"
                android:background="@color/color_333"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"/>
        </LinearLayout>
    </ScrollView>




</androidx.appcompat.widget.LinearLayoutCompat>