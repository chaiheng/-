<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_pay_frame"
    android:orientation="vertical"
    tools:context=".dialogFragment.PayPasswdDialogFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="@string/please_pay_passwd"
            android:textColor="@color/balck_22"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="14dp"
            android:src="@mipmap/close" />

    </RelativeLayout>


    <com.kenny.separatededittext.SeparatedEditText
        android:id="@+id/passwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="69dp"
        android:layout_marginRight="24dp"
        android:inputType="number"
        android:textSize="30sp"
        app:borderWidth="1.5dp"
        app:corner="4dp"
        app:cursorWidth="3dp"
        app:maxLength="6"
        app:showCursor="false"
        app:textColor="#000000" />


    <Button
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="67dp"
        android:background="@drawable/pay_passwd_button"
        android:text="@string/pay_sure"
        android:textColor="@color/golden"
        android:textSize="@dimen/text_size_18" />
</LinearLayout>