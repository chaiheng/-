<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEEEF"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".money.MarginDepositActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:src="@mipmap/go_back" />
        <TextView
            android:textStyle="bold"
            android:textColor="@color/color_333"
            android:textSize="18sp"
            android:text="充值保证金"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <View
        android:background="#EBEBEB"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="92dp">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <View
               android:layout_marginStart="50dp"
               android:background="@drawable/black_dot"
               android:layout_width="6dp"
               android:layout_height="6dp"/>
            <View
                android:layout_gravity="center_vertical"
                android:background="#EBEBEB"
                android:layout_width="124dp"
                android:layout_height="2dp"/>
            <View
                android:layout_marginStart="3dp"
                android:background="@drawable/gray_dot"
                android:layout_width="6dp"
                android:layout_height="6dp"/>
            <View
                android:layout_marginStart="3dp"
                android:layout_gravity="center_vertical"
                android:background="#EBEBEB"
                android:layout_width="124dp"
                android:layout_height="2dp"/>
            <View
                android:layout_marginStart="3dp"
                android:background="@drawable/gray_dot"
                android:layout_width="6dp"
                android:layout_height="6dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:layout_marginStart="22dp"
                    android:textColor="@color/color_333"
                    android:text="选择充值份额"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#9B9B9B"
                android:text="发起充值"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#9B9B9B"
                android:text="确认充值"
                android:layout_marginEnd="27dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:text="充值金额"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_recharge_amount"
            android:textColor="#FA5E59"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:text="10000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="25dp"
                android:layout_centerVertical="true"
                android:textColor="@color/hint_color"
                android:text="(份)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.zjun.widget.RuleView
                android:layout_marginStart="60dp"
                android:id="@+id/horizontalScale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:zjun_bgColor="@color/white"

                app:zjun_indicatorLineColor="@color/color_333"

                app:gv_shortGradationLen="8dp"

                app:gv_indicatorLineLen="30dp"
                app:gv_longGradationLen="16dp"
                app:zjun_textSize="16sp"
                app:zjun_textColor="@color/hint_color"
                app:gv_currentValue="1"
                app:gv_minValue="1"
                app:gv_maxValue="50"
                app:gv_gradationUnit="0.2"
                app:gv_numberPerCount="5"
                app:gv_gradationGap="10dp"
                app:gv_gradationNumberGap="16dp"
            />


        </RelativeLayout>
        <View
            android:visibility="gone"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:background="#EBEBEB"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:text="实际到账金额"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_actual_amount"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/hint_color"
            android:text="11000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="23dp"
            android:background="#EBEBEB"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:text="充值方式"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="#9B9B9B"
                android:textSize="16sp"
                android:text="BTA充值"
                android:layout_marginStart="21dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginEnd="20dp"
                android:src="@mipmap/check"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:textColor="#9B9B9B"
        android:text="请在30分钟内完成充值"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt_go_prepaid"
        android:text="去充值"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/color_333"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>