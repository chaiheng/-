<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.h.cheng.chain100">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.h.cheng.chain100.start.StartActivity"
            android:theme="@style/StartTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.h.cheng.chain100.activity.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask" />
        <!-- 建议使用包名加fileprovider，同一手机不能安装一样的authorities应用 -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.h.cheng.chain100.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


        <activity android:name="com.h.cheng.chain100.activity.DownActivity" />
        <activity android:name="com.h.cheng.chain100.start.GuidanceActivity" />
        <activity android:name="com.h.cheng.chain100.activity.APKActivity" />
        <!-- 登录注册转账界面 -->
        <activity android:name="com.h.cheng.chain100.login.LoginAndRegsterActivity" />

        <!-- 登录 -->
        <activity
            android:name="com.h.cheng.chain100.login.LoginActivity"
            android:launchMode="singleTask" />
        <!-- 注册 -->
        <activity
            android:name="com.h.cheng.chain100.login.RegisterActivity"
            android:launchMode="singleTask" />

        <!-- 找回密码 -->
        <activity android:name="com.h.cheng.chain100.login.FindPassWordActivity" />

        <!-- 设置用户信息 -->
        <activity android:name="com.h.cheng.chain100.login.PersonalDataActivity" />
        <!-- 系统设置 -->
        <activity android:name="com.h.cheng.chain100.activity.SettingActivity" />
    </application>

</manifest>